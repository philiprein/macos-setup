{
  // Use GitHub Dark Default theme
  "workbench.colorTheme": "GitHub Dark Default",

  // Use Prettier as default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Set tabSize for HTML documents to 2 spaces
  "[html]": {
    "editor.tabSize": 2
  },

  // Set Black as default Python formatter
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  // Set Black's default line length to 200 (instead of 88) and disable default double-quotes for string literals
  "black-formatter.args": ["-l", "200", "-S"]
}
